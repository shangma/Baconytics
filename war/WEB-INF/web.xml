<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>scraper</servlet-name>
		<servlet-class>edu.gatech.cc.baconytics.scraper.ScraperServlet</servlet-class>
	</servlet>
    <servlet-mapping>
		<servlet-name>scraper</servlet-name>
		<url-pattern>/scraper</url-pattern>
	</servlet-mapping>
	<servlet>
        <servlet-name>aggregator</servlet-name>
        <servlet-class>edu.gatech.cc.baconytics.analyzer.AggregatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aggregator</servlet-name>
        <url-pattern>/aggregator</url-pattern>
    </servlet-mapping>
	<servlet>
        <servlet-name>api</servlet-name>
        <servlet-class>edu.gatech.cc.baconytics.api.JsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>api</servlet-name>
        <url-pattern>/api</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
